{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": ["tsdoc"],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:promise/recommended",
		"plugin:jest/recommended",
		"plugin:jest/style",
		"prettier",
		"prettier/@typescript-eslint"
	],
	"rules": {
		"tsdoc/syntax": "warn"
	},
	"env": {
		"node": true,
		"browser": false
	}
}
